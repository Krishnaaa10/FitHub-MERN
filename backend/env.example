# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# MongoDB Connection String (from MongoDB Atlas)
MONGO_URI=your_mongodb_atlas_connection_string_here

# JWT Secret Key (use a strong random string in production)
# Example: FitHub2024!@#$%^&*SecureJWTKeyForProductionUseOnly9876543210ABCDEF
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Port (default: 5000)
# Note: Render will provide PORT automatically, but you can set it here
PORT=5000

# Frontend URL (for CORS configuration)
# For local development:
FRONTEND_URL=http://localhost:3000

# For production on Render:
# FRONTEND_URL=https://your-frontend-url.onrender.com
# (Set this in Render's environment variables after deploying frontend)

# Node Environment
# For production: NODE_ENV=production
# For development: NODE_ENV=development
NODE_ENV=development

